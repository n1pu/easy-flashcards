{
    "manifest_version": 2,
    "name": "WordReference to FlashCard",
    "version": "0.1",
    "content_scripts": [{
          "matches": [
            "https://www.wordreference.com/fren/*",
            "https://www.wordreference.com/enfr/*",
            "https://www.deepl.com/translator"
          ],
          "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ]
}